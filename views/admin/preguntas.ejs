<%- include('../partials/header') %>

<div class="admin-container">
    <h1><%= titulo %></h1>
    
    <div class="admin-menu">
        <a href="/admin/dashboard">Dashboard</a>
        <a href="/admin/funcionarios">Funcionarios</a>
        <% if (tipo === 'funcionarios') { %>
        <a href="/admin/preguntas-funcionarios" class="active">Preguntas Funcionarios</a>
        <% } else { %>
        <a href="/admin/preguntas-funcionarios">Preguntas Funcionarios</a>
        <% } %>
        <% if (tipo === 'administrativas') { %>
        <a href="/admin/preguntas-administrativas" class="active">Preguntas Administrativas</a>
        <% } else { %>
        <a href="/admin/preguntas-administrativas">Preguntas Administrativas</a>
        <% } %>
        <a href="/admin/secciones">Secciones Administrativas</a>
        <a href="/resultados">Ver Resultados</a>
        <a href="/admin/logout">Cerrar Sesión</a>
    </div>
    
    <div class="admin-content">
        <div class="content-header">
            <h2><%= titulo %></h2>
            <button id="add-pregunta-btn" class="btn-primary">Agregar Pregunta</button>
        </div>
        
        <div class="table-container">
            <table class="admin-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Pregunta</th>
                        <% if (tipo === 'funcionarios') { %>
                        <th>Categoría</th>
                        <% } else { %>
                        <th>Sección</th>
                        <% } %>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% preguntas.forEach(pregunta => { %>
                    <tr data-id="<%= pregunta.id %>">
                        <td><%= pregunta.id %></td>
                        <td><%= pregunta.texto %></td>
                        <% if (tipo === 'funcionarios') { %>
                        <td><%= pregunta.categoria %></td>
                        <% } else { %>
                        <td><%= pregunta.seccion_nombre %></td>
                        <% } %>
                        <td>
                            <button class="btn-edit btn-sm">Editar</button>
                            <button class="btn-delete btn-sm">Eliminar</button>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal para agregar/editar pregunta -->
<div id="pregunta-modal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <h2 id="modal-title">Agregar Pregunta</h2>
        <form id="pregunta-form">
            <input type="hidden" id="pregunta-id">
            <div class="form-group">
                <label for="texto">Pregunta</label>
                <textarea id="texto" required></textarea>
            </div>
            <% if (tipo === 'funcionarios') { %>
            <div class="form-group">
                <label for="categoria">Categoría</label>
                <select id="categoria" required>
                    <option value="">Seleccionar categoría</option>
                    <option value="Personal">Personal</option>
                    <option value="Profesional">Profesional</option>
                    <option value="Desempeño">Desempeño</option>
                </select>
            </div>
            <% } else { %>
            <div class="form-group">
                <label for="seccion_id">Sección</label>
                <select id="seccion_id" required>
                    <option value="">Seleccionar sección</option>
                    <% secciones.forEach(seccion => { %>
                    <option value="<%= seccion.id %>"><%= seccion.nombre %></option>
                    <% }); %>
                </select>
            </div>
            <% } %>
            <button type="submit" class="btn-primary">Guardar</button>
        </form>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const modal = document.getElementById('pregunta-modal');
        const addBtn = document.getElementById('add-pregunta-btn');
        const closeBtn = document.querySelector('.close');
        const form = document.getElementById('pregunta-form');
        const modalTitle = document.getElementById('modal-title');
        const preguntaIdInput = document.getElementById('pregunta-id');
        const tipo = '<%= tipo %>';
        
        // Abrir modal para agregar
        addBtn.addEventListener('click', function() {
            modalTitle.textContent = 'Agregar Pregunta';
            form.reset();
            preguntaIdInput.value = '';
            modal.style.display = 'block';
        });
        
        // Cerrar modal
        closeBtn.addEventListener('click', function() {
            modal.style.display = 'none';
        });
        
        // Editar pregunta
        document.querySelectorAll('.btn-edit').forEach(btn => {
            btn.addEventListener('click', function() {
                const row = this.closest('tr');
                const id = row.getAttribute('data-id');
                const texto = row.cells[1].textContent;
                const categoriaOSeccion = row.cells[2].textContent;
                
                modalTitle.textContent = 'Editar Pregunta';
                preguntaIdInput.value = id;
                document.getElementById('texto').value = texto;
                
                if (tipo === 'funcionarios') {
                    document.getElementById('categoria').value = categoriaOSeccion;
                } else {
                    // Para preguntas administrativas, necesitamos encontrar el ID de la sección por su nombre
                    const secciones = <%- JSON.stringify(secciones) %>;
                    const seccion = secciones.find(s => s.nombre === categoriaOSeccion);
                    if (seccion) {
                        document.getElementById('seccion_id').value = seccion.id;
                    }
                }
                
                modal.style.display = 'block';
            });
        });
        
        // Eliminar pregunta
        document.querySelectorAll('.btn-delete').forEach(btn => {
            btn.addEventListener('click', function() {
                if (confirm('¿Está seguro de eliminar esta pregunta?')) {
                    const row = this.closest('tr');
                    const id = row.getAttribute('data-id');
                    
                    fetch(`/admin/preguntas/${tipo}/${id}`, {
                        method: 'DELETE'
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            row.remove();
                        } else {
                            alert('Error al eliminar pregunta');
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        alert('Error al eliminar pregunta');
                    });
                }
            });
        });
        
        // Enviar formulario
        form.addEventListener('submit', function(e) {
            e.preventDefault();
            
            const id = preguntaIdInput.value;
            const texto = document.getElementById('texto').value;
            
            let data = { texto };
            
            if (tipo === 'funcionarios') {
                data.categoria = document.getElementById('categoria').value;
            } else {
                data.seccion_id = document.getElementById('seccion_id').value;
            }
            
            if (id) {
                // Actualizar
                fetch(`/admin/preguntas/${tipo}/${id}`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('Error al actualizar pregunta');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error al actualizar pregunta');
                });
            } else {
                // Agregar
                fetch(`/admin/preguntas-${tipo}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                })
                .then(response => {
                    if (response.redirected) {
                        window.location.href = response.url;
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error al agregar pregunta');
                });
            }
        });
        
        // Cerrar modal al hacer clic fuera
        window.addEventListener('click', function(event) {
            if (event.target === modal) {
                modal.style.display = 'none';
            }
        });
    });
</script>

<style>
    /* Estilos similares a la vista de funcionarios */
    .admin-container {
        background: white;
        border-radius: 10px;
        padding: 30px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }
    
    .admin-menu {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin-bottom: 30px;
        padding-bottom: 15px;
        border-bottom: 1px solid #eee;
    }
    
    .admin-menu a {
        padding: 8px 15px;
        background: var(--light);
        border-radius: 5px;
        text-decoration: none;
        color: var(--dark);
    }
    
    .admin-menu a.active {
        background: var(--primary);
        color: white;
    }
    
    .content-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }
    
    .table-container {
        overflow-x: auto;
    }
    
    .admin-table {
        width: 100%;
        border-collapse: collapse;
    }
    
    .admin-table th, .admin-table td {
        padding: 12px 15px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }
    
    .admin-table th {
        background-color: var(--light);
        font-weight: bold;
    }
    
    .admin-table tr:hover {
        background-color: #f5f5f5;
    }
    
    .btn-sm {
        padding: 5px 10px;
        font-size: 0.8rem;
        margin-right: 5px;
    }
    
    .btn-edit {
        background: var(--secondary);
        color: white;
        border: none;
        border-radius: 3px;
        cursor: pointer;
    }
    
    .btn-delete {
        background: var(--danger);
        color: white;
        border: none;
        border-radius: 3px;
        cursor: pointer;
    }
    
    /* Modal */
    .modal {
        display: none;
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgba(0,0,0,0.4);
    }
    
    .modal-content {
        background-color: #fefefe;
        margin: 15% auto;
        padding: 20px;
        border: 1px solid #888;
        width: 80%;
        max-width: 500px;
        border-radius: 10px;
        position: relative;
    }
    
    .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
        position: absolute;
        right: 20px;
        top: 15px;
    }
    
    .close:hover,
    .close:focus {
        color: black;
        text-decoration: none;
        cursor: pointer;
    }
    
    .form-group {
        margin-bottom: 15px;
    }
    
    .form-group label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
    }
    
    .form-group input,
    .form-group select,
    .form-group textarea {
        width: 100%;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 16px;
    }
    
    .form-group textarea {
        min-height: 100px;
        resize: vertical;
    }
</style>

