<%- include('../partials/header') %>

<div class="admin-container">
    <h1>Panel de Administración</h1>
    
    <div class="admin-menu">
        <a href="/admin/dashboard" class="active">Dashboard</a>
        <a href="/admin/funcionarios">Funcionarios</a>
        <a href="/admin/preguntas-funcionarios">Preguntas Funcionarios</a>
        <a href="/admin/preguntas-administrativas">Preguntas Administrativas</a>
        <a href="/admin/secciones">Secciones Administrativas</a>
        <a href="/resultados">Ver Resultados</a>
        <a href="/admin/logout">Cerrar Sesión</a>
    </div>
    
    <div class="dashboard-stats">
        <div class="stat-card">
            <h3>Respuestas de Funcionarios</h3>
            <p class="stat-number"><%= totalRespuestasFuncionarios %></p>
        </div>
        
        <div class="stat-card">
            <h3>Respuestas Administrativas</h3>
            <p class="stat-number"><%= totalRespuestasAdministrativas %></p>
        </div>
    </div>
    
    <div class="dashboard-actions">
        <h2>Acciones Rápidas</h2>
        <div class="actions-grid">
            <a href="/admin/funcionarios" class="action-card">
                <h3>Gestionar Funcionarios</h3>
                <p>Agregar, editar o eliminar funcionarios</p>
            </a>
            
            <a href="/admin/preguntas-funcionarios" class="action-card">
                <h3>Preguntas de Funcionarios</h3>
                <p>Administrar preguntas para evaluación de funcionarios</p>
            </a>
            
            <a href="/admin/preguntas-administrativas" class="action-card">
                <h3>Preguntas Administrativas</h3>
                <p>Administrar preguntas para evaluación administrativa</p>
            </a>
            
            <a href="/admin/secciones" class="action-card">
                <h3>Secciones Administrativas</h3>
                <p>Gestionar secciones de evaluación administrativa</p>
            </a>
        </div>
    </div>
</div>

<style>
    .admin-container {
        background: white;
        border-radius: 10px;
        padding: 30px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }
    
    .admin-menu {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin-bottom: 30px;
        padding-bottom: 15px;
        border-bottom: 1px solid #eee;
    }
    
    .admin-menu a {
        padding: 8px 15px;
        background: var(--light);
        border-radius: 5px;
        text-decoration: none;
        color: var(--dark);
    }
    
    .admin-menu a.active {
        background: var(--primary);
        color: white;
    }
    
    .dashboard-stats {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }
    
    .stat-card {
        background: var(--light);
        padding: 20px;
        border-radius: 10px;
        text-align: center;
    }
    
    .stat-number {
        font-size: 2.5rem;
        font-weight: bold;
        color: var(--primary);
        margin: 10px 0;
    }
    
    .dashboard-actions h2 {
        margin-bottom: 20px;
    }
    
    .actions-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
    }
    
    .action-card {
        background: var(--light);
        padding: 20px;
        border-radius: 10px;
        text-decoration: none;
        color: var(--dark);
        transition: all 0.3s ease;
    }
    
    .action-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }
    
    .action-card h3 {
        margin-bottom: 10px;
        color: var(--primary);
    }
</style>

<%- include('../partials/footer') %>